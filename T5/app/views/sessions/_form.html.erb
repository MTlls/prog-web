<%= form_with url: login_path, method: :post, local: true do |form| %>
  <div class="form-group mx-sm-2">
    <%= form.label :email, nil, class: "sr-only" %>
    <%= form.text_field :email, placeholder: "Email", class: "form-control form-control-sm" %>
  </div>
  <div class="form-group mx-sm-2">
    <%= form.label :password, nil, class: "sr-only" %>
    <%= form.password_field :password, placeholder: "Password", class: "form-control form-control-sm" %>
  </div>
  <%= form.submit "Login", class: "btn btn-outline-success btn-sm" %>
  <%= link_to "Registrar", new_pessoa_path, class: "link-secondary" %>
  <% if flash[:alert] %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>
<% end %>
